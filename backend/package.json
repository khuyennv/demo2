{
    "name": "nvk_nestjs",
    "private": true,
    "version": "1.0.0",
    "description": "Nest TypeScript",
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/src/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "docker:start": "cross-env NODE_ENV=production pm2-docker start process.yml --only api",
        "docker:start:dev": "sudo docker-compose -f docker-compose.yml -f docker-compose.dev.yml up",
        "docker:test": "docker-compose -f docker-compose.yml -f docker-compose.test.yml up --abort-on-container-exit",
        "migrate:create": "ts-node ./node_modules/typeorm/cli.js migration:create",
        "migrate:up": "ts-node ./node_modules/typeorm/cli.js migration:run -d ./src/configs/migration.config.ts",
        "migrate:down": "ts-node ./node_modules/typeorm/cli.js migration:revert -d ./src/configs/migration.config.ts"
    },
    "dependencies": {
        "@nestjs/common": "^9.2.0",
        "@nestjs/config": "^2.2.0",
        "@nestjs/core": "^9.2.0",
        "@nestjs/mapped-types": "1.2.0",
        "@nestjs/platform-fastify": "^9.2.0",
        "@nestjs/schedule": "^2.1.0",
        "@nestjs/swagger": "^6.0.1",
        "@ntegral/nestjs-sentry": "4.0.0",
        "@sentry/hub": "^7.20.0",
        "@sentry/node": "^7.20.0",
        "@sentry/tracing": "^7.20.0",
        "@types/morgan": "^1.9.3",
        "@types/uuid": "^8.3.4",
        "bigint-base-converter": "^0.1.3",
        "change-case": "^4.1.2",
        "class-transformer": "0.5.1",
        "class-validator": "0.13.2",
        "convert-csv-to-array": "^1.0.3",
        "dotenv": "^16.0.3",
        "fastify-swagger": "^5.2.0",
        "geolib": "^3.3.3",
        "ioredis": "^5.2.4",
        "lodash": "^4.17.21",
        "moment": "^2.29.4",
        "morgan": "^1.10.0",
        "mysql": "^2.18.1",
        "nestjs-typeorm-paginate": "^4.0.2",
        "node-fetch": "^3.3.0",
        "npx": "^10.2.2",
        "onesignal-node": "^3.4.0",
        "parse-redis-url-simple": "^1.0.2",
        "query-string": "^7.1.1",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.5.7",
        "typeorm": "^0.3.10",
        "typeorm-adapter": "^1.5.2",
        "typeorm-model-generator": "^0.4.6",
        "uuid": "^9.0.0"
    },
    "devDependencies": {
        "@fastify/static": "^6.5.0",
        "@nestjs/cli": "^9.1.5",
        "@nestjs/schematics": "^9.0.3",
        "@nestjs/testing": "^9.2.0",
        "@nestjs/typeorm": "^9.0.1",
        "@types/bull": "^4.10.0",
        "@types/cron": "^2.0.0",
        "@types/jest": "^29.2.3",
        "@types/node": "^18.11.9",
        "@types/readable-stream": "2.3.15",
        "@types/supertest": "^2.0.12",
        "@typescript-eslint/eslint-plugin": "^5.43.0",
        "@typescript-eslint/parser": "^5.43.0",
        "eslint": "^8.28.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.3.1",
        "prettier": "^2.7.1",
        "supertest": "^6.3.1",
        "ts-jest": "^29.0.3",
        "ts-loader": "^9.4.1",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.1.0",
        "typescript": "^4.9.3"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
